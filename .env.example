# Server Configuration
FLIGHT_APP_PORT=8000
FLIGHT_APP_HOST=localhost
FLIGHT_APP_LOG_LEVEL=info
FLIGHT_APP_DEBUG=false

# S3 Configuration
FLIGHT_S3_BUCKET=flight-cache
FLIGHT_S3_ENDPOINT=http://localhost:9000
FLIGHT_S3_ACCESS_KEY=minioadmin
FLIGHT_S3_SECRET_KEY=minioadmin
FLIGHT_S3_REGION=us-east-1

# Database Configuration
FLIGHT_DB_PATH=flight.db
FLIGHT_REGISTRY_PATH=job_registry.db

# Query Configuration
FLIGHT_QUERY_ROW_THRESHOLD=10000
FLIGHT_MAX_WORKERS=4

# CORS Configuration
FLIGHT_CORS_ORIGINS=*
FLIGHT_CORS_METHODS="*"
FLIGHT_CORS_HEADERS="*"

# Client Configuration
FLIGHT_CLIENT_BASE_URL=http://localhost:8000

# Logging Configuration
FLIGHT_LOG_LEVEL=info
FLIGHT_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Metrics Configuration
FLIGHT_METRICS_ENABLED=true
FLIGHT_METRICS_PATH=/metrics

# Health Check Configuration
FLIGHT_HEALTH_CHECK_PATH=/health
FLIGHT_HEALTH_CHECK_INTERVAL=5

# MinIO Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=test-data
MINIO_REGION=us-east-1

# File Discovery Settings
FILE_DISCOVERY_INTERVAL=300  # in seconds
FILE_REGISTRY_DB=file_registry.db  # Path to the DuckDB file for tracking files